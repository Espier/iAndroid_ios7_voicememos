<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:id="@+id/memos_item_delete_hidden"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <Button
                android:id="@+id/hiddenDeleteButon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:background="@color/red"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:text="@string/delete"
                android:enabled="false"
             >
            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/memos_item_visible"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/memos_item_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/memos_item_title_editable"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/memos_item_create_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/memos_item_title"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/memos_item_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/memos_item_title"
                    android:layout_toRightOf="@id/memos_item_create_date"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/playlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/memos_item_play"
            android:layout_width="30dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dip"
            android:contentDescription="@string/finish"
            android:src="@drawable/play" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/current_positon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:gravity="top"
                android:text="0:00" />

            <SeekBar
                android:id="@android:id/progress"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="5dip"
                android:gravity="center_vertical"
                android:maxHeight="2dip"
                android:minHeight="2dip"
                android:progressDrawable="@drawable/seekbar"
                android:thumb="@drawable/thumb"
                android:thumbOffset="0.0dp" />

            <TextView
                android:id="@+id/current_remain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:gravity="top"
                android:text="-0:00" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sharelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/cell_GaryLine"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/share_memo"
            android:src="@drawable/line" />

        <LinearLayout
            android:id="@+id/sharesublayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/share"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:contentDescription="@string/share_memo"
                android:src="@drawable/action" />

            <TextView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/edit"
                android:textColor="#007aff"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/del"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:contentDescription="@string/delete"
                android:src="@drawable/trash" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/memos_item__id"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:visibility="gone" />

    <TextView
        android:id="@+id/memos_item_path"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:visibility="gone" />

</LinearLayout>